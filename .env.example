# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_NAME=enterprise_auth
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Read Replica Configuration (optional)
DB_READ_HOSTS=  # Comma-separated list of read replica hosts
DB_READ_USER=
DB_READ_PASSWORD=
DB_READ_PORT=5432

# Database Connection and Optimization Settings
DB_SSL_MODE=prefer
DB_CONN_MAX_AGE=300
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Database Monitoring Settings
DB_MONITORING_ENABLED=True
DB_MONITORING_INTERVAL=60
SLOW_QUERY_THRESHOLD=1.0
DB_QUERY_CACHE_TIMEOUT=300
DB_HEALTH_CHECK_INTERVAL=60

# Redis Configuration
REDIS_URL=redis://localhost:6379/1
REDIS_SESSION_URL=redis://localhost:6379/2
REDIS_RATE_LIMIT_URL=redis://localhost:6379/3
REDIS_CACHE_WARMING_URL=redis://localhost:6379/4

# Redis Cluster Configuration (optional)
REDIS_CLUSTER_ENABLED=False
REDIS_CLUSTER_NODES=  # Comma-separated list of host:port pairs
REDIS_SENTINEL_ENABLED=False
REDIS_SENTINEL_HOSTS=  # Comma-separated list of host:port pairs
REDIS_MASTER_NAME=mymaster

# Redis Connection Settings
REDIS_CONNECTION_POOL_SIZE=100
REDIS_CONNECTION_TIMEOUT=5
REDIS_HEALTH_CHECK_INTERVAL=30

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/3
CELERY_RESULT_BACKEND=redis://localhost:6379/4
CELERY_WORKER_CONCURRENCY=4

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@enterprise-auth.com

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_LIFETIME=900
JWT_REFRESH_TOKEN_LIFETIME=2592000

# OAuth Configuration
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret
GITHUB_OAUTH_CLIENT_ID=your-github-client-id
GITHUB_OAUTH_CLIENT_SECRET=your-github-client-secret
MICROSOFT_OAUTH_CLIENT_ID=your-microsoft-client-id
MICROSOFT_OAUTH_CLIENT_SECRET=your-microsoft-client-secret

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting Configuration
RATE_LIMIT_ENABLE=True
RATE_LIMIT_PER_IP=100/hour
RATE_LIMIT_PER_USER=1000/hour

# MFA Configuration
MFA_TOTP_ISSUER=Enterprise Auth
MFA_BACKUP_CODES_COUNT=10

# Session Configuration
SESSION_COOKIE_AGE=3600
SESSION_COOKIE_SECURE=False

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn

# Timezone Configuration
TIME_ZONE=UTC