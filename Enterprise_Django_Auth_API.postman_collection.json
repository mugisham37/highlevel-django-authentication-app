            "body": {
              "mode": "raw",
              "raw": "{\n    \"refresh_token\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/core/auth/refresh/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "core", "auth", "refresh", ""]
            }
          }
        },
        {
          "name": "Validate Token",
