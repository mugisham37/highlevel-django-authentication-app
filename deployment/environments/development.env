# Development Environment Configuration
DJANGO_SETTINGS_MODULE=enterprise_auth.settings.development
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,auth-dev.example.com

# Database settings
DATABASE_URL=postgresql://dev_user:dev_password@localhost:5432/enterprise_auth_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=enterprise_auth_dev
DATABASE_USER=dev_user
DATABASE_PASSWORD=dev_password

# Redis settings
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Cache settings
CACHE_TIMEOUT=300
SESSION_CACHE_TIMEOUT=900

# Security settings (relaxed for development)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=SAMEORIGIN

# JWT settings
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_LIFETIME=900
JWT_REFRESH_TOKEN_LIFETIME=2592000

# OAuth settings (development keys)
GOOGLE_CLIENT_ID=dev-google-client-id
GOOGLE_CLIENT_SECRET=dev-google-client-secret
GITHUB_CLIENT_ID=dev-github-client-id
GITHUB_CLIENT_SECRET=dev-github-client-secret
MICROSOFT_CLIENT_ID=dev-microsoft-client-id
MICROSOFT_CLIENT_SECRET=dev-microsoft-client-secret

# External service settings (test credentials)
TWILIO_ACCOUNT_SID=dev-twilio-account-sid
TWILIO_AUTH_TOKEN=dev-twilio-auth-token
AWS_ACCESS_KEY_ID=dev-aws-access-key
AWS_SECRET_ACCESS_KEY=dev-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=enterprise-auth-dev-media

# Logging settings
LOG_LEVEL=DEBUG
STRUCTURED_LOGGING=True

# Performance settings
GUNICORN_WORKERS=2
GUNICORN_WORKER_CLASS=sync
GUNICORN_WORKER_CONNECTIONS=100
GUNICORN_MAX_REQUESTS=100

# Celery settings
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_WORKER_CONCURRENCY=2

# Rate limiting (relaxed for development)
RATE_LIMIT_ENABLE=True
RATE_LIMIT_PER_IP=10000/hour
RATE_LIMIT_PER_USER=50000/hour

# MFA settings
MFA_TOTP_ISSUER=Enterprise Auth Dev
MFA_SMS_PROVIDER=console

# Session settings
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
SESSION_EXPIRE_AT_BROWSER_CLOSE=False

# Encryption
ENCRYPTION_KEY=dev-encryption-key-32-characters

# Monitoring (development)
SENTRY_DSN=
PROMETHEUS_METRICS_ENABLED=True