# Staging Environment Configuration
DJANGO_SETTINGS_MODULE=enterprise_auth.settings.staging
DEBUG=False
ALLOWED_HOSTS=auth-staging.example.com,auth-staging-internal.example.com

# Database settings
DATABASE_URL=postgresql://staging_user:${DATABASE_PASSWORD}@postgres-staging:5432/enterprise_auth_staging
DATABASE_HOST=postgres-staging
DATABASE_PORT=5432
DATABASE_NAME=enterprise_auth_staging
DATABASE_USER=staging_user
DATABASE_PASSWORD=${DATABASE_PASSWORD}

# Redis settings
REDIS_URL=redis://:${REDIS_PASSWORD}@redis-staging:6379/0
REDIS_HOST=redis-staging
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=${REDIS_PASSWORD}

# Cache settings
CACHE_TIMEOUT=1800
SESSION_CACHE_TIMEOUT=1800

# Security settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# JWT settings
JWT_SECRET_KEY=${JWT_SECRET_KEY}
JWT_ALGORITHM=RS256
JWT_PRIVATE_KEY=${JWT_PRIVATE_KEY}
JWT_PUBLIC_KEY=${JWT_PUBLIC_KEY}
JWT_ACCESS_TOKEN_LIFETIME=900
JWT_REFRESH_TOKEN_LIFETIME=2592000

# OAuth settings
GOOGLE_CLIENT_ID=staging-google-client-id
GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}
GITHUB_CLIENT_ID=staging-github-client-id
GITHUB_CLIENT_SECRET=${GITHUB_CLIENT_SECRET}
MICROSOFT_CLIENT_ID=staging-microsoft-client-id
MICROSOFT_CLIENT_SECRET=${MICROSOFT_CLIENT_SECRET}

# External service settings
TWILIO_ACCOUNT_SID=staging-twilio-account-sid
TWILIO_AUTH_TOKEN=${TWILIO_AUTH_TOKEN}
AWS_ACCESS_KEY_ID=staging-aws-access-key
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_REGION=us-east-1
AWS_S3_BUCKET=enterprise-auth-staging-media

# Logging settings
LOG_LEVEL=INFO
STRUCTURED_LOGGING=True

# Performance settings
GUNICORN_WORKERS=3
GUNICORN_WORKER_CLASS=gevent
GUNICORN_WORKER_CONNECTIONS=500
GUNICORN_MAX_REQUESTS=500

# Celery settings
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@redis-staging:6379/1
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@redis-staging:6379/2
CELERY_WORKER_CONCURRENCY=3

# Rate limiting
RATE_LIMIT_ENABLE=True
RATE_LIMIT_PER_IP=2000/hour
RATE_LIMIT_PER_USER=10000/hour

# MFA settings
MFA_TOTP_ISSUER=Enterprise Auth Staging
MFA_SMS_PROVIDER=twilio

# Session settings
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict
SESSION_EXPIRE_AT_BROWSER_CLOSE=True

# Encryption
ENCRYPTION_KEY=${ENCRYPTION_KEY}

# Monitoring
SENTRY_DSN=${SENTRY_DSN}
PROMETHEUS_METRICS_ENABLED=True